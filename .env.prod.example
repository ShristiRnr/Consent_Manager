# ARC Consent Management Platform - Production Environment Configuration
# Copy this file to .env.prod and update with your production values

# Database Configuration
POSTGRES_USER=arc_admin
POSTGRES_PASSWORD=your_secure_postgres_password_here
DB_SSL_MODE=require

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_256_bit_jwt_secret_key_here_must_be_very_secure

# Encryption Configuration
ENCRYPTION_KEY=your_256_bit_encryption_key_here_must_be_very_secure

# Frontend URLs
FRONTEND_BASE_URL=https://app.arc-consent.com
ADMIN_BASE_URL=https://admin.arc-consent.com

# CORS Configuration
CORS_ORIGINS=https://app.arc-consent.com,https://admin.arc-consent.com,https://forms.arc-consent.com

# Email Configuration (SMTP)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=noreply@arc-consent.com
SMTP_PASS=your_smtp_password_here
FROM_EMAIL=ARC Consent Platform <noreply@arc-consent.com>

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password_here

# SSL/TLS Configuration
SSL_CERT_PATH=/app/certs/fullchain.pem
SSL_KEY_PATH=/app/certs/privkey.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=arc-consent-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Compliance Configuration
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for DPDP compliance
DATA_RETENTION_CHECK_INTERVAL=24h
GDPR_ENABLED=true
DPDP_ENABLED=true

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30s
IDLE_TIMEOUT=60s
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s

# Security Configuration
BCRYPT_COST=12
SESSION_TIMEOUT=24h
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30m

# Feature Flags
WEBSOCKET_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
API_DOCS_ENABLED=false  # Disable in production
DEBUG_MODE=false

# External Services
WEBHOOK_TIMEOUT=30s
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5s

# Notification Configuration
EMAIL_QUEUE_SIZE=1000
EMAIL_WORKERS=5
NOTIFICATION_BATCH_SIZE=100

# Data Processing
MAX_UPLOAD_SIZE=10MB
MAX_EXPORT_RECORDS=100000
EXPORT_TIMEOUT=300s

# Clustering Configuration
CLUSTER_NAME=arc-production
NODE_ID=node-1
CLUSTER_SECRET=your_cluster_secret_here
